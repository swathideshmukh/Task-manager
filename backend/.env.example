# MongoDB Connection String (use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/task-manager?retryWrites=true&w=majority

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

